<h3>{{viewTitle}}</h3>

<form action="/library" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{library._id}}">
    <div class="form-group">
        <label>Name Of the Book</label>
        <input type="text" class="form-control" name="bookName" placeholder="Book Name" value="{{library.bookName}}">
        <div class="text-danger">
            {{lib.bookNameError}}</div>
    </div>
    <div class="form-group">
        <label>Author of the Book</label>
        <input type="text" class="form-control" name="author" placeholder="Author" value="{{library.author}}">
        <div class="text-danger">
            {{lib.authorError}}</div>
    </div>

     <div class="form-group">
        <label>Domain of the Book</label>
        <input type="text" class="form-control" name="bdomain" placeholder="Domain" value="{{library.bdomain}}">
        <div class="text-danger">
            {{lib.bdomainError}}</div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Year of publishing</label>
            <input type="number" class="form-control" name="yob" placeholder="2002" value="{{library.yob}}">
        </div>
        
        <div class="form-group col-md-6">
            <label>Book Availability </label>
            <input type="text" class="form-control" name="bookA" placeholder="True or False" value="{{library.bookA}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/library/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>